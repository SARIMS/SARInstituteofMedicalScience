<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shreyesh.sarinstituteofmedicalscience">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".SARInstituteofMedicalScience"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminLoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".PatientManagementActivity" />
        <activity
            android:name=".AddPatientActivity"
            android:parentActivityName=".PatientManagementActivity" />
        <activity
            android:name=".PatientDetailsActivtity"
            android:parentActivityName=".PatientManagementActivity" />
        <activity android:name=".AdminHomeActivity" />
        <activity
            android:name=".AddNoticeActivity"
            android:parentActivityName=".AdminHomeActivity" />
        <activity
            android:name=".ViewNoticeActivity"
            android:parentActivityName=".AdminHomeActivity" />
        <activity
            android:name=".PatientHomeActivity"
            android:label="@string/title_activity_patient_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".ServicesActivity" />
        <activity
            android:name=".PatientLoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ConfirmServicesActivity" />
        <activity android:name=".ViewBillsActivity" />
        <activity android:name=".AccountSettingsActivity"></activity>
    </application>

</manifest>